@page
@model AT_TourManager.Pages.Destinos.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Destino</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Destino.Id" />
            <div class="form-group">
                <label asp-for="Destino.Nome" class="control-label"></label>
                <input asp-for="Destino.Nome" class="form-control" />
                <span asp-validation-for="Destino.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destino.ImagemUrl" class="control-label"></label>
                <input asp-for="Destino.ImagemUrl" class="form-control" />
                <span asp-validation-for="Destino.ImagemUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destino.PaisDestinoId" class="control-label"></label>
                <select asp-for="Destino.PaisDestinoId" class="form-control" asp-items="ViewBag.PaisDestinoId"></select>
                <span asp-validation-for="Destino.PaisDestinoId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Pacotes Turísticos</label>
                <select asp-for="SelectedPacotesIds" asp-items="Model.PacotesOptions"
                        class="form-control" multiple size="5"></select>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
