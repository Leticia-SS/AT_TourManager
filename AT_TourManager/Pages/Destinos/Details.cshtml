@page
@model AT_TourManager.Pages.Destinos.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Destino</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destino.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destino.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destino.ImagemUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destino.ImagemUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destino.PaisDestino)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destino.PaisDestino.Nome)
        </dd>
        <dd class="col-sm-10">
            @if (Model.Destino.PacotesTuristicos.Any())
            {
                <ul>
                    @foreach (var pacote in Model.Destino.PacotesTuristicos)
                    {
                        <li>
                            <a asp-page="/PacotesTuristicos/Details" asp-route-id="@pacote.Id">
                                @pacote.Titulo
                            </a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <span>Nenhum pacote associado</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Destino.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
