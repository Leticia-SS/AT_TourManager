@page
@model AT_TourManager.Pages.Destinos.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Destino</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destino.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destino.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destino.ImagemUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destino.ImagemUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destino.PaisDestino)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destino.PaisDestino.Nome)
        </dd>
    </dl>
</div>
<div>
    <h4>Pacotes Turísticos</h4>
    <hr />
    @if (Model.Destino.PacotesTuristicos.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Preço</th>
                    <th>Data de Início</th>
                    <th>Capacidade Máxima</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pacote in Model.Destino.PacotesTuristicos)
                {
                    <tr>
                        <td>@pacote.Titulo</td>
                        <td>@pacote.Preco.ToString("C")</td>
                        <td>@pacote.DataInicio.ToString("d")</td>
                        <td>@pacote.CapacidadeMaxima</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nenhum pacote turístico encontrado para este destino.</p>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Destino.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
