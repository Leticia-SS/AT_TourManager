@page
@model AT_TourManager.Pages.Destinos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Destino[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destino[0].ImagemUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destino[0].PaisDestino)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Destino) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <img src="@item.ImagemUrl" alt="@item.Nome" style="max-width: 200px; max-height: 200px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaisDestino.Nome)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
