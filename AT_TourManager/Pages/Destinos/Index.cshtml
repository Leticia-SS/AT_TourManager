@page
@model AT_TourManager.Pages.Destinos.IndexModel

@{
    ViewData["Title"] = "Cidades dos Destinos";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-create">Cadastrar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Cidade
            </th>
            <th>
                Imagem
            </th>
            <th>
                País
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Destino) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <img src="@item.ImagemUrl" alt="ImagemCidade" style="width: 300px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaisDestino.Nome)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-edit">Editar</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-details">Detalhes</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-delete">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
