@page
@model AT_TourManager.Pages.ViewNotesModel
@{
}

<div class="container mt-4">
    <h2>View Notes</h2>

    <div class="row mt-4">
        <div class="col-md-5">
            <form method="post">
                <div class="form-group">
                    <label>Nova Nota:</label>
                    <textarea asp-for="NovaNota" class="form-control" rows="5"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </form>
        </div>

        <div class="col-md-7">
            <h4>Notas Salvas:</h4>
            <div class="list-group">
                @foreach (var note in Model.Notas)
                {
                    <a href="?file=@note" class="list-group-item list-group-item-action">
                        @note
                    </a>
                }
            </div>

            @if (!string.IsNullOrEmpty(Model.Mensagem))
            {
                <div class="mt-3 p-3 bg-light">
                    <pre>@Model.Mensagem</pre>
                </div>
            }
        </div>
    </div>
</div>